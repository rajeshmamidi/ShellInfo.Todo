@model UserRoleViewModel2

@{
    ViewData["Title"] = "Edit User Access";
    var roles = (IEnumerable<ApplicationRole>)ViewData["Roles"];
}
@{
    Layout = null;
}
@section header{
    <style>
        .form-horizontal .control-label {
            padding-top: 0;
        } 
    </style>
}
    <hr />
    <div class="animated fadeIn">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h3>Edit User Access</h3>
                    </div>
                    <div class="card-body">
                        <div class="row" style="margin-top:20px">
                            <div class="col-md-12">
                                <form asp-action="Edit" class="form-horizontal">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <input type="hidden" asp-for="UserId" />
                                    <input type="hidden" asp-for="UserName" />
                                 
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="form-group row">
                                                <label asp-for="UserName" class="col-md-2 col-form-label" style="font:bold"></label>
                                                <div class="col-md-10">
                                                    @Html.DisplayFor(m => m.UserName)
                                                </div>                                      
                                                </div>
                                        </div>
                                    </div>
                                    
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="form-group row">
                                                <label class="col-md-2 col-form-label" style="font:bold">Roles</label>
                                                <div class="col-md-10">
                                                    @foreach (var role in roles)
                                                    {
                                                        <label>
                                                            <input type="checkbox" name="Roles[]" value="@role.Name"
                                                                   @if (Model?.Roles != null && Model.Roles.Contains(role.Name)) { <text> checked="checked" </text> } />
                                                            &nbsp;@role.Name&nbsp;&nbsp;
                                                        </label>
                                                    }
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="col-md-offset-2 col-md-10">
                                            <input type="submit" class="btn btn-success" value="Submit" />
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>